<!DOCTYPE html>
<html>
<head>
  <title>Edit Service</title>
</head>
<body>
  <h1>Edit Service</h1>
  <form action="/services/<%= service.id %>?_method=PUT" method="POST">
    <div>
      <label for="service_name">Service Name:</label>
      <input type="text" id="service_name" name="service_name" value="<%= service.service_name %>" required>
    </div>
    <div>
      <label for="industries">Industries:</label>
      <select id="industries" name="industry_ids" multiple>
        <% industries.forEach(industry => { %>
          <option value="<%= industry.id %>" <%= service.Industries && service.Industries.map(i => i.id).includes(industry.id) ? 'selected' : '' %>><%= industry.industry_name %></option>
        <% }); %>
      </select>
    </div>
    <button type="submit">Save Changes</button>
  </form>
  <a href="/">Back to List</a>
</body>
</html>
